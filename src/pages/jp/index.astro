---
const name = "フィリップ・ルカス";
const romaji = "Lucas Philippe";
const title = `${name} - ソフトウェア エンジニア`;
const github = "https://github.com/Caslus";
const linkedin = "https://www.linkedin.com/in/lucasphi/";
const url = "https://lucasphilippe.com/";
const description = "フルスタック アプリケーションの構築が好きなソフトウェア エンジニアです。空き時間にはサーバーをいじったり、新しいテクノロジーを探究したりするのが好きです。";
const location = "クリチバ、ブラジル";

import Scribble from "../../components/Scribble.astro";
import LanguagePicker from "../../components/LanguagePicker.astro";
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/jpg" href="lucas.jpg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<meta name="title" content={title} />
		<meta name="description" content=`${description}` />
		<meta property="og:type" content="website" />
		<meta property="og:url" content={url} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content=`${description}` />
		<meta property="og:image" content="https://lucasphilippe.com/lucas.jpg" />
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content={url} />
		<meta property="twitter:title" content={title} />
		<meta property="twitter:description" content=`${description}` />
		<meta property="twitter:image" content="https://lucasphilippe.com/lucas.jpg" />
	</head>
	<body>
		<LanguagePicker />
		<wrapper>
			<div>
				<name>
					<code>👋 こんにちは！僕は</code>
					<h1>{name}</h1>
					<subtitle>【 {romaji} 】</subtitle>
				</name>
				<p>{description}</p>
				<p class="location">📍 {location}</p>
				<links>
					<a href={github}><img src="github-mark-white.svg" />ギットハブ</a>
					<a href={linkedin}><img src="linkedin-white.svg" />リンケディン</a>
					<a href="/resume.pdf"><img src="resume-white.svg" />履歴書（英語）</a>
				</links>
			</div>
			<img src="https://lucasphilippe.com/lucas.jpg" alt="黒と赤のスカイダイビングキャノピーで乗って飛んでいる私の写真" />
		</wrapper>
		<background>
			<Scribble />
		</background>
	</body>
</html>

<style>
	body {
		background-color: #0b0909;
		font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
		margin: 0;
		padding: 0;
	}

	wrapper {
		display: flex;
		justify-content: center;
		align-items: center;
		text-align: right;
		flex-direction: row;
		height: 100dvh;
		gap: 3rem;

		@media screen and (max-width: 800px) {
			flex-direction: column;
		}
	}

	div {
		width: 25rem;
		@media screen and (max-width: 450px) {
			width: 90%;
		}
	}

	h1,
	subtitle {
		color: #d6d6d6;
		margin: 0;
	}

	p,
	code {
		color: #8c8c8c;
	}

	name {
		display: flex;
		flex-direction: column;
		align-items: end;
	}

	.location {
		width: 100%;
	}

	*::selection {
		background-color: #a92e2f88;
		color: #ffffff;
	}

	img {
		width: 20rem;
		border-radius: 1rem;

		@media screen and (max-width: 450px) {
			max-width: 90%;
		}

		@media screen and (max-width: 375px) {
			max-width: 50%;
		}
	}

	background {
		position: fixed;
		width: 60rem;
		top: 50dvh;
		left: 50vw;
		transform: translateY(-50%) translateX(-50%);
		z-index: -1;
	}

	links {
		display: flex;
		flex-direction: row;
		justify-content: end;
		gap: 1rem;

		img {
			width: 1rem;
			margin-right: 0.5rem;
			border-radius: 0;
		}

		a {
			color: #d6d6d6;
			text-decoration: none;
		}

		a:hover,
		a:focus,
		a:active {
			text-decoration: underline;
		}
	}
</style>
