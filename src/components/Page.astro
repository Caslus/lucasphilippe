---
import LanguagePicker from "../components/LanguagePicker.astro";
import Scribble from "../components/Scribble.astro";
import Base from "../components/Base.astro";

import type { UIStrings } from "../interfaces/i18n";
import { getLangFromUrl, useTranslation } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const translation = useTranslation(lang as keyof UIStrings);

const github = "https://github.com/Caslus";
const linkedin = "https://www.linkedin.com/in/lucasphi/";
const url = "https://lucasphilippe.com";
---

<Base>
	<LanguagePicker />
	<wrapper>
		<div>
			<code>👋 {translation("greeting")}</code>
			<h1>{translation("name")}</h1>
			<p>{translation("description")}</p>
			<p>📍 {translation("location")}</p>
			<links>
				<a href={github}><img src=`${url}/github-mark-white.svg` alt={translation("github")} width="100%" />{translation("github")}</a>
				<a href={linkedin}><img src=`${url}/linkedin-white.svg` alt={translation("linkedin")} width="100%" />{translation("linkedin")}</a>
				<a href=`${url}/${translation("resumeFile")}`><img src=`${url}/resume-white.svg` alt={translation("resume")} width="100%" />{translation("resume")}</a>
			</links>
		</div>
		<img src=`${url}/lucas.webp` alt={translation("image")} width="100%" />
	</wrapper>
	<background>
		<Scribble />
	</background>
</Base>
